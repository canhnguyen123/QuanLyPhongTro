<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:id="@+id/cardview_phong"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtphong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="201"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtten"
            android:text="Nguyễn xuân cảnh"
            android:textSize="30dp"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_below="@+id/txtphong"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_update"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtngo"
            android:text="5"
            android:textSize="30dp"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_below="@+id/txtten"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_update"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update_phong"
            android:text="Còn phòng"
            android:textSize="30dp"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_below="@+id/txtngo"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_update"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>