<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:id="@+id/cardview_phong"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtphong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số phòng"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update_phong"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_update"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_phong"
            android:layout_below="@+id/update_phong"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_delete"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail"
            android:layout_below="@+id/delete_phong"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/eyes"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>